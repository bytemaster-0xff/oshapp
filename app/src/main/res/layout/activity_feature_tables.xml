<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FeatureTablesActivity">
    <LinearLayout
        android:id="@+id/feature_table_new"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Feature Table Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/feature_table_name"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/feature_table_description"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <LinearLayout android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Save"
                android:id="@+id/feature_table_save"
                android:layout_width="120dp"
                android:layout_height="48dp" />
            <Button
                android:text="Cancel"
                android:id="@+id/feature_table_cancel"
                android:layout_width="120dp"
                android:layout_height="48dp" />
        </LinearLayout>
    </LinearLayout>
<ListView
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/feature_table_new"
    android:id="@+id/features_tables_list"
    android:layout_width="match_parent">
</ListView>

</android.support.constraint.ConstraintLayout>