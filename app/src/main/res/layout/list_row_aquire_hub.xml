<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <TextView
        android:id="@+id/row_acquire_hub_name"
        android:textSize="20dp"
        android:text="hub name"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/row_acquire_hub_last_contact"
        android:layout_marginTop="6dp"
        android:text="May 17, 1968 2:30 PM EDT"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/row_acquire_hub_description"
        android:text="hub description"
        android:layout_marginTop="104dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="32dp"
        android:text="Distance:"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="32dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/row_acquire_hub_distance"
        android:text="34.5 km"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="56dp"
        android:text="Heading:"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/row_acquire_hub_heading"
        android:text="24Â°"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="80dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="80dp"
        android:text="Status:"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/row_acquire_hub_status"
        android:text="status"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="@string/icon_wifi"
        android:fontFamily="@font/fa_solid_900"
        android:id="@+id/row_acquire_wifi"
        android:textAlignment="center"
        android:layout_width="36dp"
        android:layout_marginRight="60dp"
        android:layout_height="36dp" />

    <TextView
        android:textSize="28dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:text="@string/icon_acquire"
        android:fontFamily="@font/fa_solid_900"
        android:id="@+id/row_acquire_hub_refresh"
        android:textAlignment="center"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:textSize="28dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/icon_map_pin"
        android:fontFamily="@font/fa_solid_900"
        android:id="@+id/row_acquire_show"
        android:layout_width="36dp"
        android:textAlignment="center"
        android:layout_marginRight="60dp"
        android:layout_height="36dp" />

    <TextView
        android:textSize="28dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/icon_navigate"
        android:fontFamily="@font/fa_solid_900"
        android:id="@+id/row_acquire_hub_navigate"
        android:textAlignment="center"
        android:layout_width="36dp"
        android:layout_height="36dp" />



</RelativeLayout>