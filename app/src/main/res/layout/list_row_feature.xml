<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:orientation="horizontal"
    android:layout_height="64dp">
    <TextView
        android:textSize="26dp"
        android:text="FEATURE_NAME"
        android:id="@+id/row_feature_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:textSize="28dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:text="@string/icon_edit"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/fa_solid_900"
        android:id="@+id/row_feature_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="28dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:text="@string/icon_trash"
        android:id="@+id/row_feature_remove"
        android:fontFamily="@font/fa_solid_900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout >