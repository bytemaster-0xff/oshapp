<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:orientation="horizontal"
    android:layout_height="40dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:textSize="14dp"
            android:text="FEATURE_NAME"
            android:id="@+id/row_map_feature_table_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="10dp"
            android:text="FEATURE_NAME"
            android:id="@+id/row_map_feature_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:text="@string/icon_view"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/fa_solid_900"
        android:id="@+id/row_map_feature_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:text="@string/icon_map_pin"
        android:id="@+id/row_map_feature_navigate"
        android:fontFamily="@font/fa_solid_900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout >