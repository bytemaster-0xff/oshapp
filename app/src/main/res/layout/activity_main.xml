<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/textview_current_dbname"
        android:layout_width="wrap_content"
        android:textSize="16pt"
        android:text="SELECT A DB"
        android:layout_height="wrap_content" />

    <GridLayout
        android:id="@+id/main_launcher_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_current_dbname">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/main_packages_menu"
            android:background="@drawable/custom_border">
            <TextView
                android:fontFamily="@font/fa_solid_900"
                android:textSize="48dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:text="@string/icon_folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Packages"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/main_hubs_menu"
            android:background="@drawable/custom_border">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/osh_logo" />
            <TextView
                android:text="Hubs"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:id="@+id/main_chart_menu"
            android:orientation="vertical"
            android:background="@drawable/custom_border">
            <TextView
                android:fontFamily="@font/fa_solid_900"
                android:textSize="48dp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:text="@string/icon_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Chart View"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/main_features_menu"
            android:orientation="vertical"
            android:background="@drawable/custom_border">
            <TextView
                android:fontFamily="@font/fa_solid_900"
                android:textSize="48dp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:text="@string/icon_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Features"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:fontFamily="casual"
            android:gravity="center"
            android:id="@+id/main_acquire_menu"
            android:orientation="vertical"
            android:background="@drawable/custom_border">
            <TextView
                android:fontFamily="@font/fa_solid_900"
                android:textSize="48dp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:text="@string/icon_acquire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Acquire"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </GridLayout>


</android.support.constraint.ConstraintLayout>