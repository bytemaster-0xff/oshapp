<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/textview_current_dbname"
        android:layout_width="wrap_content"
        android:textSize="16pt"
        android:text="SELECT A DB"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/main_options_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_current_dbname">

        <Button
            android:id="@+id/button_show_databases"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="Databases" />

        <Button
            android:id="@+id/button_show_sensor_hubs"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="Sensor Hubs" />
    </LinearLayout>


    <ListView
        android:id="@+id/main_list_contents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/main_options_menu" />

</android.support.constraint.ConstraintLayout>